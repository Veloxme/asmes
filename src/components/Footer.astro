---
const UBICATION =
  "Avenida José Luis Peche Rice, número 4801, interior 305, El Venadillo, C.P. 82129, Mazatlán, Sinaloa";
const EMAIL = "asmes.mzt@gmail.com";
const TEL = "+52 (669) 123-4567";

import { Image } from "astro:assets";
import logo from "/src/assets/ASMES.png";

const list = [
  { name: "Inicio", href: "#inicio" },
  { name: "Nosotros", href: "#nosotros" },
  { name: "Servicios", href: "#servicios" },
  { name: "Contacto", href: "#contacto" },
];
---

<footer class='bg-gray-900 text-white py-12'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='grid grid-cols-1 md:grid-cols-4 gap-8'>
      <div class='col-span-2'>
        <div class='flex items-center mb-4'>
          <Image
            src={logo}
            alt='logo ASMES'
            class='h-12 w-auto'
          />
        </div>
        <p class='text-gray-400 mb-4'>
          Asociación Sinaloense de Médicos y Expertos en la Salud, A.C.
        </p>
        <p class='text-gray-400'>
          Comprometidos con la excelencia médica desde 2009
        </p>
      </div>
      <div>
        <h4 class='font-bold mb-4'>Enlaces</h4>
        <ul class='space-y-2 text-gray-400'>
          {
            list.map((l) => (
              <li>
                <a
                  href={l.href}
                  class='hover:text-white transition'>
                  {l.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h4 class='font-bold mb-4'>Contacto</h4>
        <ul class='space-y-2 text-gray-400'>
          <li>{UBICATION}</li>
          <li>{EMAIL}</li>
          <li>Tel: {TEL}</li>
        </ul>
      </div>
    </div>
    <div class='border-t border-gray-800 mt-8 pt-8 text-center text-gray-400'>
      <p>&copy; 2025 ASMES. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
