---
import { Image } from "astro:assets";
const img =
  "https://images.unsplash.com/photo-1624727828489-a1e03b79bba8?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
---

<section
  id='inicio'
  class='relative overflow-hidden py-32 px-6'>
  <div
    class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1624727828489-a1e03b79bba8?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-top opacity-20">
  </div>
  <!-- <div
    class='absolute inset-0 bg-gradient-to-r from-blue-600/10 to-teal-600/10'>
  </div> -->
  <div class='container mx-auto relative z-10'>
    <div class='max-w-4xl mx-auto text-center'>
      <h2
        class='text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight'>
        Asociación Sinaloense de<br />
        <span
          class='text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-teal-600'>
          Médicos y Expertos de la Salud
        </span>
      </h2>
      <p class='text-xl text-gray-600 mb-12 max-w-2xl mx-auto'>
        Fortaleciendo la medicina en Sinaloa mediante la colaboración,
        innovación y excelencia profesional
      </p>

      <!-- Search Box -->
      <div class='bg-white rounded-2xl shadow-2xl p-8 max-w-3xl mx-auto'>
        <h3 class='text-2xl font-semibold text-gray-800 mb-6'>
          Encuentra un Médico
        </h3>
        <div class='space-y-4'>
          <div class='flex flex-col md:flex-row gap-4'>
            <select
              id='searchType'
              class='px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 bg-white text-gray-700'>
              <option value='nombre'>Nombre</option>
              <option value='especialidad'>Especialidad</option>
              <option value='ubicacion'>Ubicación</option>
            </select>
            <input
              type='text'
              id='searchTerm'
              placeholder='Buscar por nombre...'
              class='flex-1 px-6 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500'
            />
            <button
              id='searchBtn'
              class='px-8 py-3 bg-gradient-to-r from-blue-600 to-teal-600 text-white rounded-lg font-semibold hover:from-blue-700 hover:to-teal-700 transition flex items-center justify-center gap-2 shadow-lg'>
              <svg
                class='w-5 h-5'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'>
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'
                ></path>
              </svg>
              Buscar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
